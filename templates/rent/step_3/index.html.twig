{% extends "base.html.twig" %}

{% block title 'Locations disponibles' %}

{% block body %}
    <main id="rent_step_3">
        <div class="wrapper">
            <section class="car-title">
                <h3> {{ car.brand.brand }} - {{ car.model.model }}</h3>
            </section>
            <section class="car-image">
                <img src="/images/temp/m2.jpg" alt="image voiture">
            </section>
            <form class="car-price" method="GET" action="{{ path('rent_recap', { id: car.id }) }}">
                <h4>Prix TTC : {{ car.daily_price }} / 24h</h4>
                <button class="btn">Réserver</button>
            </form>
            <section class="car-description">
                <p>{{ car.description }}</p>
            </section>
            <section class="car-main">
                <div class="car-specs">
                    <section class="car-specs-title">
                        <h5>Caractéristiques :</h5>
                    </section>    
                    <section class="car-specs-content">
                        <div class="spec">
                            <p><strong>Puissance</strong></p>
                            <p>{{ car.horsepower }} cv</p>
                        </div>
                        <div class="spec">
                            <p><strong>Année</strong></p>
                            <p>{{ car.release_year }}</p>
                        </div>
                        <div class="spec">
                            <p><strong>Boite</strong></p>
                            <p>{{ car.gearbox.gearbox }}</p>
                        </div>
                        <div class="spec">
                            <p><strong>Énergie</strong></p>
                            <p>{{ car.fuel.fuel }}</p>
                        </div>
                        <div class="spec">
                            <p><strong>Couleur</strong></p>
                            <p>{{ car.color.color }}</p>
                        </div>
                    </section>
                </div>
            </section>
        </div>
    </main>
{% endblock %}