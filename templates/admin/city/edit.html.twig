{% extends "admin/base.html.twig" %}

{% block title 'Modification de la ville' %}

{% block body %}
<main id='admin_city_edit' class='admin_crud_edit admin_city_search'>
    <div class="header">
        <h2>Modification de la ville</h2>
    </div>
    <div class="form">
    {{ form_start(form) }}
        <div class="input-text">
            <label>Nom</label>
            {{ form_widget(form.name)}}
        </div>
        <div class="input-text">
            <label>Code</label>
            {{ form_widget(form.code)}}
        </div>
        <div class='input-text department-container'>
            {{ form_widget(form.department_id, {'attr': {'class': 'hidden-type'}})}}
            <label for='office_department'>DÃ©partement :</label>
            <js-search-dynamic
                data-placeholder=''
                data-id='department_input'
                data-name='department_id'
                data-query='/department'
            ></js-search-dynamic>
        </div>
        <div class="submit">
            {{ form_widget(form.submit) }}
        </div>
    {{ form_end(form) }}
    </div>
</main>

{% endblock %}