{% extends "admin/base.html.twig" %}

{% block title 'Modification du département' %}

{% block body %}
<main id='admin_department_edit' class='admin_crud_edit'>
    <div class="header">
        <h2>Modification du département</h2>
    </div>
    <div class="form">
    {{ form_start(form) }}
        <div class="grid-two">
            <div class="input-text">
                <label>Nom</label>
                {{ form_widget(form.name)}}
            </div>
            <div class="input-text">
                <label>Code</label>
                {{ form_widget(form.code)}}
            </div>
        </div>
        <div class="submit">
            {{ form_widget(form.submit) }}
        </div>
    {{ form_end(form) }}
    </div>
</main>

{% endblock %}